{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sandbox debug",
            "type": "python",
            "request": "launch",
            "program": "sandbox.py",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "pytest",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "args": ["-rx", "tests.py", "--verbose "],
            "cwd": "${workspaceFolder}/src",
            "justMyCode": false
          }
    ]
}